<h1>Images</h1>


<%= link_to  "Upload photo", new_image_path, class: 'btn btn-default' %>

<br>

<div class="container">

  <% if @images.exists? %>
    <% @images.each_slice(4) do |image| %>
      <div class="row">
        <% image.each do |image| %>
          <div class="col-sm-3"> 
            <%= image_tag  image.image, :size => '250x125' %>
            <div>
            <%= link_to  image.title, image.image%>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
