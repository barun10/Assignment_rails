<p id="notice"><%= notice %></p>

<h1>Officers</h1>

<%= simple_form_for :search, method: "GET", html: { class: 'form-inline' } do |f| %>
  <%= f.input :query, input_html: {value: ""} %>
  <br>
  <%= f.submit "Search", class: "btn btn-primary" %>
  <br>
<% end %>

<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @officers.each do |officer| %>
      <tr>
        <td><%= officer.name %></td>
        <td><%= officer.email %></td>
        <td><%= link_to 'Show', officer %></td>
        <td><%= link_to 'Edit', edit_officer_path(officer) %></td>
        <td><%= link_to 'Destroy', officer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Officer', new_officer_path %>
